<!DOCTYPE html>
<html>

<head>
  <title>ChatApp</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
    }
    
    h1 {
      font-size: 24px;
      color: #333;
      text-align: center;
    }

    p {
      text-align: center;
    }
    
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    
    li {
      margin-bottom: 10px;
    }
    
    a {
      display: block;
      padding: 10px;
      background-color: #fff;
      color: #333;
      text-decoration: none;
      border-radius: 5px;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
    }
    
    a:hover {
      background-color: #333;
      color: #fff;
    }
  </style>
</head>
<body>
  <p>Welcome to the ChatApp</p>
  <h1>Select room</h1>
  <ul>
    <% rooms.forEach(function(room) { %>
      <li>
        <a href="#" onclick="openChatRoom('/<%- room %>')"><%- room %></a>
      </li>
    <% }); %>
  </ul>
  
  <script>
    function openChatRoom(roomUrl) {
      window.open(roomUrl, 'Chat Room', 'width=500,height=600,left=' + (screen.width/2 - 250) + ',top=' + (screen.height/2 - 300));
    }
  </script>
  
</body>
</html>